    <script>
        // Function to show the pop-up
        function showPopup(message) {
            // Create a div for the pop-up
            const popup = document.createElement('div');
            popup.classList.add('popup-message', 'show');
            popup.innerText = message;

            // Append the pop-up to the body
            document.body.appendChild(popup);

            // Set a timeout to remove the pop-up after 3 seconds
            setTimeout(() => {
                popup.remove();
            }, 3000);
        }

        // Attach event listeners to the wishlist and cart buttons
        document.querySelectorAll('.action-btn').forEach(button => {
            button.addEventListener('click', function (event) {
                event.preventDefault(); // Prevent the default action
                const href = this.getAttribute('href');

                // Determine the message based on the button clicked
                let message = '';
                if (href.includes('add-wishlist')) {
                    message = 'You have added 1 product to the wishlist.';
                } else if (href.includes('shop-cart')) {
                    message = 'You have added 1 product to the cart.';
                }

                // Show the pop-up
                showPopup(message);

                // Optionally, redirect after the pop-up is shown
                setTimeout(() => {
                    window.location.href = href;
                }, 500); // Adjust delay if needed
            });
        });
    </script>


