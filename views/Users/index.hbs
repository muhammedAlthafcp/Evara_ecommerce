            $('.add-wishlist-btn').on('click', function (e) {
                e.preventDefault();
                var productId = $(this).data('id');

                $.ajax({
                    url: '/add-wishlist',
                    type: 'POST',
                    data: { id: productId },
                    success: function (response) {
                        if (response.success) {
